<div class="form-wrapper">
<h1 align="center" class="articles-h1">All Bloggers</h1>
  <div class="pagination"><%= paginate @users %></div>
<% @users.each do |user| %>
    <ul class="listing users-wrap">
      <div class="row">
        <div class="col-md-4 user-card">
          <li>
            <%= link_to gravatar_for(user), user_path(user) %>
          </li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li class="c-gray">
            <small>
              <%= pluralize(user.articles.count, "article") if user.articles %>
            </small>
          </li>

          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Delete this User", user_path(user),method: :delete,
                                                                data: {confirm: "Are you sure you want to delete the user and all their articles?"},
                                                                class: "btn btn-danger btn-sm"
                %></li>
          <% end %>

        </div>
      </div>
    </ul>
<% end %>
  <div class="pagination"><%= paginate @users %></div>
</div>

