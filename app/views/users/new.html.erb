<div class="form-wrapper">
  <h1 align="center">Sign up</h1>
  <%= render 'shared/errors', obj:@user %>


  <%= form_for @user do |f| %>

      <div class="form-group row">

        <%= f.label :username, class: "control-label col-sm-2 t-left" %>
        <div class="col-sm-12">
          <%= f.text_field :username, class: "form-control" , autofocus: true%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, "Email", class: "control-label col-sm-2 t-left" %>

        <div class="col-sm-12">
          <%= f.email_field :email, class: "form-control", autofocus: true, rows: 10 %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "control-label col-sm-2 t-left" %>

        <div class="col-sm-12">
          <%= f.password_field :password, class: "form-control", autofocus: true%>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-4 ">
      <%= link_to "Back to artciles listing", articles_path %>
    </div>
  </div>
</div>
