<div class="form-wrapper">

<% if @article.errors.any?  %>
    <h2>The following errors prevented the article from getting created</h2>
    <ul>
      <%= @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>


  <%= form_for @article do |f| %>

      <div class="form-group row">

          <%= f.label :title, class: "control-label col-sm-2 t-right" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" , autofocus: true%>
        </div>
      </div>

      <div class="form-group row">
          <%= f.label :description, "Body", class: "control-label col-sm-2 t-right" %>

        <div class="col-sm-10">
          <%= f.text_area :description, class: "form-control", autofocus: true, rows: 15 %>
        </div>
      </div>

      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
        <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-4 offset-sm-2">
      <%= link_to "Back to artciles listing", articles_path %>
    </div>
  </div>
</div>
