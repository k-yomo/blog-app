<div class="form-wrapper">
  <%= render 'shared/errors', obj:@article %>


  <%= form_for @article do |f| %>

      <div class="form-group row">

          <%= f.label :title, class: "control-label col-sm-2 t-left" %>
        <div class="col-sm-12">
          <%= f.text_field :title, class: "form-control" , autofocus: true%>
        </div>
      </div>

      <div class="form-group row">
          <%= f.label :description, "Body", class: "control-label col-sm-2 t-left" %>

        <div class="col-sm-12">
          <%= f.text_area :description, class: "form-control", autofocus: true, rows: 10 %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
        <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-4 ">
      <%= link_to "Back to artciles listing", articles_path %>
    </div>
  </div>
</div>
